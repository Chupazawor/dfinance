<h1>Summary Page</h1>
<%= link_to 'New expense', new_expense_path %>
<table>
  <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.amount %></td>
        <td><%= expense.category %></td>
        <td><%= expense.currency %></td>
        <td><%= expense.created_at.to_formatted_s(:short) %></td>
        <td><%= link_to 'Edit expense', edit_expense_path(expense.id) %></td>
        <td><%= link_to 'Remove expense', expense_path(expense.id), data: { turbo_method: :delete } %></td>
      </tr>
  <% end %>
</table>
